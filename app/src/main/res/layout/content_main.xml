<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:weightSum="100"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            >

        <TextView
                android:text="@string/welcome"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/big"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/big"
                android:id="@+id/welcome"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/big"
                android:layout_marginBottom="@dimen/big"
                android:textAlignment="center"
                android:textSize="@dimen/biggest"
                android:textStyle="bold"
                android:id="@+id/name"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edru"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="@dimen/big"
                android:layout_alignBottom="@+id/name"
                android:id="@+id/edru"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dagar"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/smallest"
                android:layout_marginBottom="@dimen/nulls"
                android:textAlignment="center"
                android:textSize="@dimen/big"
                android:layout_alignBottom="@+id/edru"
                android:id="@+id/dagar"/>

    </LinearLayout>



    <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="50"
            android:layout_centerHorizontal="true">


        <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/tasks"
                    android:paddingBottom="@dimen/smallest"
                    android:gravity="bottom|center"
                    android:background="@mipmap/ic_launcher"
                    android:id="@+id/tasks"
                    />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:paddingBottom="@dimen/smallest"
                    android:text="@string/results"
                    android:background="@mipmap/ic_launcher"
                    android:id="@+id/results"/>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:paddingBottom="@dimen/smallest"
                    android:background="@mipmap/ic_launcher"
                    android:text="@string/emotions"
                    android:id="@+id/emotions"/>
        </TableRow>

        <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center" >

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:paddingBottom="@dimen/smallest"
                    android:text="@string/goals"
                    android:background="@mipmap/ic_launcher"
                    android:id="@+id/goals"/>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/steps"
                    android:paddingBottom="@dimen/smallest"
                    android:gravity="bottom|center"
                    android:text="@string/steps"
                    android:background="@mipmap/ic_launcher" />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:paddingBottom="@dimen/smallest"
                    android:text="@string/sponsor"
                    android:background="@mipmap/ic_launcher"
                    android:id="@+id/sponsor"/>
        </TableRow>

        <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:paddingBottom="@dimen/smallest"
                    android:text="@string/aboutme"
                    android:background="@mipmap/ic_launcher"
                    android:id="@+id/aboutme"/>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:paddingBottom="@dimen/smallest"
                    android:text="@string/settings"
                    android:background="@mipmap/ic_launcher"
                    android:id="@+id/settings" />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:paddingBottom="@dimen/smallest"
                    android:text="@string/help"
                    android:background="@mipmap/ic_launcher"
                    android:id="@+id/help"/>
        </TableRow>
    </TableLayout>


</LinearLayout>