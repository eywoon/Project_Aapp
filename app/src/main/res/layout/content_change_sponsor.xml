<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="is.hi.project_aapp.Sponsor.ChangeSponsorActivity"
    tools:showIn="@layout/activity_change_sponsor"
    android:orientation="vertical"
    android:background="@color/back">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/smallest"
        android:src="@mipmap/group_48dp"/>

    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/mediumtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/big"
        android:layout_marginLeft="@dimen/smallest"
        android:layout_marginBottom="@dimen/smallest"
        android:text="@string/sponsor"/>


    <EditText
        android:id="@+id/name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/mediumtext"
        android:typeface="monospace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nulls"
        android:layout_marginLeft="@dimen/smallest"
        android:layout_marginBottom="@dimen/smallest"
        android:hint="@string/name"
        android:inputType="text" />

    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/mediumtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/big"
        android:layout_marginLeft="@dimen/smallest"
        android:layout_marginBottom="@dimen/smallest"
        android:text="Símanúmer"/>

    <EditText
        android:id="@+id/phoneno"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/mediumtext"
        android:typeface="monospace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nulls"
        android:layout_marginLeft="@dimen/smallest"
        android:layout_marginBottom="@dimen/smallest"
        android:hint="5812345"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/takkar"
            android:layout_marginLeft="@dimen/smallest"
            android:layout_marginBottom="@dimen/smallest"
            android:layout_marginRight="@dimen/smallest"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="@dimen/mediumtext"
            android:textAlignment="center"
            android:text="@string/vista"
            android:drawableLeft="@mipmap/ic_done_white_48dp"
            android:onClick="onClickChangeSponsor"/>

        </LinearLayout>
</LinearLayout>
