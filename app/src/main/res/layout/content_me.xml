<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Me.MeActivity"
    tools:showIn="@layout/activity_me"
    android:orientation="vertical"
    android:background="@color/back">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="@dimen/smallest"
        android:layout_marginTop="@dimen/smallest"
        android:src="@mipmap/ic_face_white_48dp"/>

    <TextView
        android:text="@string/nameHolder"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/medium"
        android:typeface="monospace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big"
        android:layout_marginLeft="@dimen/smallest"
        android:layout_marginBottom="@dimen/smallest"
        android:id="@+id/welcome"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/small"
        android:layout_alignBottom="@+id/welcome"
        android:layout_marginLeft="@dimen/smallest"
        android:layout_marginBottom="@dimen/smallest"
        android:id="@+id/name" />

    <TextView
        android:text="@string/soberdate"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/medium"
        android:typeface="monospace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/smallest"
        android:layout_marginBottom="@dimen/smallest"
        android:layout_marginTop="@dimen/big"
        android:id="@+id/soberdate1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="@dimen/smallest"
        android:layout_marginBottom="@dimen/smallest"
        android:textSize="@dimen/small"
        android:id="@+id/soberdate" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/smallest"
            android:layout_marginBottom="@dimen/smallest"
            android:layout_marginRight="@dimen/smallest"
            android:drawableRight="@mipmap/ic_mode_edit_white_48dp"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="@dimen/medium"
            android:textAlignment="center"
            android:id="@+id/changesponsor"
            android:onClick="onChangeUser"
            android:text="@string/change"/>
    </LinearLayout>

</LinearLayout>
